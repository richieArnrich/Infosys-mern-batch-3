<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h1 class="display-3 text-center p-3"><%=message%></h1>
    <table class="table table-bordered">
      <thead>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Country</th>
        <th>Age</th>
      </thead>
      <tbody id="tbody"></tbody>
    </table>
    <script>
      let tbody = document.getElementById("tbody");
      fetch("http://localhost:4000/customers")
        .then((res) => res.json())
        .then((res) => {
          console.log(res);
          showCustomers(res);
        })
        .catch((err) => console.log(err));

      function showCustomers(customers) {
        customers.map((customer) => {
          let row = document.createElement("tr");
          let firstName = document.createElement("td");
          let lastName = document.createElement("td");
          let country = document.createElement("td");
          let age = document.createElement("td");
          firstName.innerHTML = customer.firstname;
          lastName.innerHTML = customer.lastname;
          country.innerHTML = customer.country;
          age.innerHTML = customer.age;
          row.appendChild(firstName);
          row.appendChild(lastName);
          row.appendChild(country);
          row.appendChild(age);
          tbody.append(row);
        });
      }
    </script>
  </body>
</html>
